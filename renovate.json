{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "postUpgradeTasks": {
    "commands": [
      "sed -i 's/pkgrel=.*/pkgrel=1/' {{{packageFile}}}",
      "bash scripts/update-checksums.sh {{{packageFile}}}"
    ],
    "fileFilters": ["**/PKGBUILD"],
    "executionMode": "update"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)PKGBUILD$/"
      ],
      "matchStrings": [
        "pkgver=(?<currentValue>.*?)\\n# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\n"
      ],
      "extractVersionTemplate": "{{#if (equals datasource 'github-releases')}}^v?(?<version>.*)${{else}}{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      "extractVersion": "^v?(?<version>.*)$"
    }
  ]
}
